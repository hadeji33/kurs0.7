@model IEnumerable<kurs0._7.Supply>

@{
    ViewBag.Title = "Index";
}

<h2>Справочник поступлений материалов</h2>

<p>
    @Html.ActionLink("Принять материал", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Количество
        </th>
        <th>
            Дата поступления
        </th>
        <th>
            Наименование материала
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Materials.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить количество", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
