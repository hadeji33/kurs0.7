@model kurs0._7.Models.ClientDetails
@using Microsoft.AspNet.Identity
@{
    Model.EMail = User.Identity.GetUserName();
    ViewBag.Title = "Форма заказа";
}

<h2>Оформить заказ сейчас</h2>
<p>Пожалуйста, введите номер телефона, чтобы мы могли связаться с вами для подтверждения заказа</p>
<div class="col-md-6">
    @using (Html.BeginForm("Create", "Orders", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3> Данные</h3>
        <div class="form-group">
            <label>Ваш телефон:</label>
            @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control", @placeholder="+7(999)999-99-99"})
            @Html.ValidationMessageFor(x => x.Telephone, "" ,new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Ваш E-mail:</label>
            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", @id = "nokeypress", @readonly = "readonly" })

        </div>

        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Обработать заказ" />
        </div>
    }
</div>
<div class="col-md-6">
    @Html.Action("CheckCart","Cart")
</div>
<div class="clearfix"></div>